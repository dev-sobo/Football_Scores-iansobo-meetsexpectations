<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:id="@+id/homeLinearId"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_gravity="left">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:text="@string/HomeTeam"
            android:id="@+id/homeTeamCollectionId"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="start|left"
            android:textSize="15sp"
            android:layout_marginRight="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:text="@string/dash"
            android:id="@+id/homeGoalsCollectionId"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/dash"
            android:id="@+id/dashCollection"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="right|end"
        android:layout_gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:text="@string/AwayTeam"
            android:id="@+id/awayTeamCollectionId"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right|end"
            android:textSize="15sp"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
            android:text="@string/dash"
            android:id="@+id/awayGoalsCollectionId"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="right|end"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>